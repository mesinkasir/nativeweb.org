---
layout: base.njk
---
    <main class="body-content-bg py-5">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-lg-9">
                    <header class="mb-5 border-bottom pb-4">
                        <h1 class="display-5 fw-bold text-primary-custom">
                            <a href="{{page.url}}" class="none">{{title}}</a></h1>
                        <div class="mt-3">
							<i class="fas fa-tags me-1"></i> 
							{%- for tag in tags | filterTagList %}{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
                          <a href="{{ tagUrl }}" class="me-3 none small">{{tag}}</a>{%- endfor %}
                        </div>
                        <p class="post-meta mt-3">
                            <i class="fas fa-calendar me-1"></i> Publish On: <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
                        </p>
                    </header>
                    {% if image %}<img class="img-fluid rounded shadow mt-3" alt="{{title}}" width="100%" height="100%"
					src="{{image}}"/>{% if image_copyrights %}<p class="ms-3 mt-1 mb-3"><small>{{image_copyrights}}</small></p>{% endif %}
					{% endif %}
					<h2><strong>{{description}}</strong></h2>
					 {% if show_toc %}<div class="bg-body-secondary p-3 card shadow-sm border-0 mt-3 mb-3"><h3><strong>{{widget.table_of_content}}</strong></h3>{{ content | toc | safe }}</div>{% endif %}
                    <article class="blog-content">
                       <heading-anchors>{{content |safe }}</heading-anchors>
                    </article>
                    <hr class="my-5">

                    {%- if collections.posts %} {%- set previousPost = collections.posts |
				getPreviousCollectionItem %} {%- set nextPost = collections.posts |
				getNextCollectionItem %} {%- if nextPost or previousPost %}
                    <div class="d-flex justify-content-between">{%- if previousPost %}
                        <a href="{{ previousPost.url }}" class="btn btn-outline-primary-custom rounded-pill">
                            <i class="fas fa-arrow-left me-2"></i> Previous
                        </a>{% endif %}
                         {%- if nextPost %}<a href="{{ nextPost.url }}" class="btn btn-outline-primary-custom rounded-pill">
                            Next <i class="fas fa-arrow-right ms-2"></i>
                        </a>{% endif %}
                    </div>
				{%- endif %} {%- endif %}

                </div>
            </div>
        </div>
    </main>