---
layout: base.njk
---
<main class="body-content-bg py-5 mt-5">
        <div class="container my-4">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <h1 class="display-5 fw-bold mb-4 text-primary-custom">{{title}}</h1>
                    <p class="lead text-muted">{{description}}</p>
                    {% if image %}<div class="col-md-10 mx-auto"><img class="img-fluid rounded shadow mt-3" alt="{{title}}" width="100%" height="100%"
                    src="{{image}}"/>{% if image_copyrights %}<p class="ms-3 mt-1"><small>{{image_copyrights}}</small></p>{% endif %}</div>{% endif %}
                    {% if show_toc %}<div class="bg-body-secondary p-3 card shadow-sm border-0 mt-3 mb-3"><h3><strong>{{widget.table_of_content}}</strong></h3>{{ content | toc | safe }}</div>{% endif %}
                    <heading-anchors>{{content |safe }}</heading-anchors>
                </div>
            </div>
        </div>
</main>