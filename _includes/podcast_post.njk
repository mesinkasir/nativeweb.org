---
layout: base.njk
---
    <main class="body-content-bg py-5">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-lg-9">
                    <header class="mb-5 text-center">
                        <h1 class="display-6 fw-bold text-primary-custom mt-3 mb-2">
                            <a href="{{page.url}}" class="none">{{title}}</a></h1>
                        <p class="post-meta">
                            <i class="fas fa-calendar me-1"></i> Publish: <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
                            <i class="fas fa-clock me-1 ms-3"></i> Duration: {{duration}}
                        </p>
                        <div class="mt-3">
							<i class="fas fa-tags me-1"></i> 
							{%- for tag in tags | filterTagList %}{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
                          <a href="{{ tagUrl }}" class="me-3 none">{{tag}}</a>{%- endfor %}
                        </div>
                    </header>

<div class="podcast-player-mockup p-4 mb-5">
    <div class="ratio ratio-16x9">
        <iframe 
            src="{{iframe}}" 
            title="{{title}}" 
            allowfullscreen 
            frameborder="0"
            class="rounded-5 shadow"
            loading="lazy"
            allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture">
        </iframe>
    </div>
    <div class="d-flex justify-content-between small text-white-50 mt-1">
        <span>{{title}}</span>
        <span>{{duration}}</span>
    </div>
</div>

                    <article class="episode-description">
                        {% if show_toc %}<div class="bg-body-secondary p-3 card shadow-sm border-0 mt-3 mb-3"><h3><strong>{{widget.table_of_content}}</strong></h3>{{ content | toc | safe }}</div>{% endif %}
                       {{content|safe}}
                       <hr/>
                    {%- if collections.podcasts %} {%- set previousPost = collections.podcasts |
				getPreviousCollectionItem %} {%- set nextPost = collections.podcasts |
				getNextCollectionItem %} {%- if nextPost or previousPost %}
                    <div class="d-flex justify-content-between mt-3">{%- if previousPost %}
                        <a href="{{ previousPost.url }}" class="btn btn-outline-primary-custom rounded-pill">
                            <i class="fas fa-arrow-left me-2"></i> Previous
                        </a>{% endif %}
                         {%- if nextPost %}<a href="{{ nextPost.url }}" class="btn btn-outline-primary-custom rounded-pill">
                            Next <i class="fas fa-arrow-right ms-2"></i>
                        </a>{% endif %}
                    </div>
				{%- endif %} {%- endif %}
                    </article>

                </div>
            </div>
        </div>
    </main>