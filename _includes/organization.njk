                        <h5 class="fw-bold mb-1"><a href="{{p.url or page.url}}" class="none">{{p.name}}</a></h5>
                        <p class="text-primary-custom fw-semibold mb-3">{{p.position}}</p>
                        <p class="small text-muted">{{p.text| md |safe}}</p>
                    </div>
                </div>
                {% endfor %}

