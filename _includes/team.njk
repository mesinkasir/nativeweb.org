---
layout: base.njk
---
<main class="body-content-bg py-5">
<div class="container ">
<div class="col-md-10 mx-auto p-3 p-md-5 mt-3 text-center">
<h1 class="custom-title">
<strong><a class="none" href="{{page.url}}">{{name}}</a></strong>
</h1>
{% if position %}<h2 class="mb-3 fw-bold">{{position}}</h2>{% endif %}
</div>
<div class="text-start col-md-10 mx-auto mt-5 mb-5 p-3">
<div class="row">
  {% if image %}<div class="col-md-6 p-3">
    <img class="img-fluid rounded-3" alt="{{name}}" width="100%" height="100%" src="{{image}}"/>
  </div>
  <div class="col-md-6 p-3 p-md-5">
    <h3 class="fw-bold mb-3">{{name}}</h3>
    {{content|safe}}
     {% if social %}<div class="mt-3">
{%- for s in social %}
  {%- if s.icon %}
  <a href="{{s.url}}" title="{{s.title}}" class="btn btn-sm btn-{{s.color}} rounded-circle me-3 none">
    <i class="{{s.icon}} mt-1" aria-label="{{s.title}}"></i>
  </a>
  {%- endif %}
{%- endfor %}</div>
{% endif %}
  </div>
  {% else %}
  <div class="col-md-10 mx-auto p-3 p-md-5">
    <h3 class="fw-bold mb-3">{{name}}</h3>
    {{content|safe}}
     {% if social %}<div class="mt-3">
{%- for s in social %}
  {%- if s.icon %}
  <a href="{{s.url}}" title="{{s.title}}" class="btn btn-sm btn-{{s.color}} rounded-circle me-3 none">
    <i class="{{s.icon}} mt-1" aria-label="{{s.title}}"></i>
  </a>
  {%- endif %}
{%- endfor %}</div>
{% endif %}
  </div>
  {% endif %}
</div>
</div>
</div>
</main>
